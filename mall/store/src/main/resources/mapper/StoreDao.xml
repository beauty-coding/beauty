<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.beauty.mall.store.dao.StoreDao">

    <resultMap type="com.beauty.mall.store.entity.Store" id="StoreMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="nums" column="nums" jdbcType="OTHER"/>
        <result property="goodid" column="goodid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="StoreMap">
        select
          id, nums, goodid
        from store.store
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="StoreMap">
        select
          id, nums, goodid
        from store.store
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="StoreMap">
        select
          id, nums, goodid
        from store.store
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="nums != null">
                and nums = #{nums}
            </if>
            <if test="goodid != null">
                and goodid = #{goodid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into store.store(nums, goodid)
        values (#{nums}, #{goodid})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update store.store
        <set>
            <if test="nums != null">
                nums = #{nums},
            </if>
            <if test="goodid != null">
                goodid = #{goodid},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from store.store where id = #{id}
    </delete>

</mapper>